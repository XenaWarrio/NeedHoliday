<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.needholiday.ui.MainFragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_to_chooseLanguageBottomSheet"
            app:destination="@id/chooseLanguageBottomSheet" />
        <action
            android:id="@+id/action_mainFragment_to_quizFragment"
            app:destination="@id/quizFragment" />
    </fragment>
    <dialog
        android:id="@+id/chooseLanguageBottomSheet"
        android:name="com.example.needholiday.ui.ChooseLanguageBottomSheet"
        android:label="ChooseLanguageBottomSheet"
        tools:layout="@layout/bottom_sheet_choose_language">
        <argument
            android:name="selectedLanguage"
            app:argType="string" />
    </dialog>
    <fragment
        android:id="@+id/quizFragment"
        android:name="com.example.needholiday.ui.quiz.QuizFragment"
        android:label="QuizFragment"
        tools:layout="@layout/fragment_quiz">
        <action
            android:id="@+id/action_quizFragment_to_resultFragment"
            app:destination="@id/resultFragment" />
    </fragment>
    <fragment
        android:id="@+id/resultFragment"
        android:name="com.example.needholiday.ui.ResultFragment"
        android:label="ResultFragment"
        tools:layout="@layout/fragment_result">
        <action
            android:id="@+id/action_resultFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
</navigation>